    <class>com.nicolas.hostal.modelo.Rol</class>
    <class>com.nicolas.hostal.modelo.Usuario</class>
    <class>com.nicolas.hostal.modelo.ProductoEntrante</class>
    <class>com.nicolas.hostal.modelo.ItemProducto</class>
    <class>com.nicolas.hostal.modelo.Venta</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/losdelfines?serverTimezone=UTC"/>
      <property name="javax.persistence.jdbc.user" value="gerente"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="1234"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
